<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginLeft="380dp"
    android:layout_marginRight="380dp"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="#ffffff" >

    <RelativeLayout
        android:id="@+id/dwp_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line3"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp" >

        <TextView
            android:id="@+id/dwp_txt_content"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:gravity="center"
            android:padding="16dp"
            android:text=""
            android:textSize="35sp"
            android:textColor="#000000"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

    <View
        android:id="@+id/line"
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_below="@id/dwp_content"
        android:background="@color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:padding="10dp"
        android:layout_below="@+id/dwp_content"
        android:layout_centerHorizontal="true">

        <Button
            android:id="@+id/dwp_btn_quxiao"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="35dp"
            android:layout_weight="1"
            android:background="@drawable/button_red_selector"
            android:gravity="center"
            android:text="取\t消"
            android:textColor="@color/white"
            android:textSize="45sp" />

        <View
            android:id="@+id/line2"
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_height="fill_parent"
            />

        <Button
            android:id="@+id/dwp_btn_queren"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:layout_marginRight="35dp"
            android:background="@drawable/button_green_selector"
            android:gravity="center"
            android:text="提\t交"
            android:textColor="@color/white"
            android:textSize="45sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/dwp_txt_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="10dp"
        android:text="温馨提示"
        android:paddingBottom="10dp"
        android:textColor="#efefef"
        android:textSize="40sp"
        android:textStyle="bold"
        android:background="@drawable/red_shape"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />
    <View
        android:id="@+id/line3"
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_below="@id/dwp_txt_title"
        android:background="@color/white" />

</RelativeLayout>